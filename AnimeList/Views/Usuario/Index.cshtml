@using AnimeUserManager.Models
@model List<UserModel>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="text-center">

    <div class="d-grip gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-warning" role="button" asp-controller="Usuario" asp-action="Criar">Adicionar Usuario</a>
    </div>
    <br />

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MensagemSucesso"]
        </div>		
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MensagemErro"]
        </div>
        
    }

    <br />
    
    <h1 class="display-4">Lista De Usuarios</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Usuario</th>
                <th scope="col">Anime Preferido</th>
                <th scope="col">Genero</th>
                <th scope="col">Criador</th>
                <th scope="col">Ano de Lançamento</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(UserModel user in Model)
                {
                    <tr>
                        <th scope="row">@user.Id</th>
                        <td>@user.Usuario</td>
                        <td>@user.NomeAnime</td>
                        <td>@user.Genero</td>
                        <td>@user.Criador</td>
                        <td>@user.AnoLancamento</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@user.Id" asp-controller="Usuario" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@user.Id" asp-controller="Usuario" asp-action="ExcluirConfirmacao">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

