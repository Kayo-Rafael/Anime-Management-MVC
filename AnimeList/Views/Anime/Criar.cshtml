@model AnimeModel
@{
	ViewData["Title"] = "Criar Anime";
}

<div class="text-center">
    <h1 class="display-4">Adicionar novo Anime</h1>
</div>

<form asp-controller="Anime" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="nome">Nome Usuario</label>
        <input type="text" asp-for="Usuario" class="form-control" placeholder="Digite o seu nome"/>
    </div>

    <div class="form-group">
        <label for="nome">Nome Anime Preferido</label>
        <input type="text" asp-for="NomeAnime" class="form-control" placeholder="Digite o nome do anime"/>
    </div>

    <div class="form-group">
        <label for="genero">Genero do Anime</label>
        <input type="text" asp-for="Genero" class="form-control" placeholder="Digite o Genero do anime" />
    </div>

    <div class="form-group">
        <label for="criador">Criador</label>
        <input type="text" asp-for="Criador" class="form-control" placeholder="Digite o criador ou estúdio" />
    </div>

    <div class="form-group">
        <label for="anoLancamento">Ano de Lançamento</label>
        <input type="number" asp-for="AnoLancamento" class="form-control" placeholder="Digite o ano de lançamento" min="1950" max="2100" />
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-3">Adicionar</button>

    <a class="btn btn-secondary w-100 mt-2" asp-controller="Anime" asp-action="Index" role="button">Voltar</a>
</form>
