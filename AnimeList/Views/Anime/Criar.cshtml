@{
	ViewData["Title"] = "Criar Anime";
}

<div class="text-center">
    <h1 class="display-4">Adicionar novo Anime</h1>
</div>

<form>
    <div class="form-group">
        <label for="nome">Nome do Anime</label>
        <input type="text" name="Nome" class="form-control" placeholder="Digite o nome do anime" required />
    </div>

    <div class="form-group">
        <label for="criador">Criador</label>
        <input type="text" name="Criador" class="form-control" placeholder="Digite o criador ou estúdio" />
    </div>

    <div class="form-group">
        <label for="anoLancamento">Ano de Lançamento</label>
        <input type="number" name="AnoLancamento" class="form-control" placeholder="Digite o ano de lançamento" min="1950" max="2100" />
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-3">Adicionar</button>

    <a class="btn btn-secondary w-100 mt-2" aps-controller="Anime" asp-action="Index" role="button">Voltar</a>
</form>
