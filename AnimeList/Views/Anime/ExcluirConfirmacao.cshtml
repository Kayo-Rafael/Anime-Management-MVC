@model AnimeModel

@{
    ViewData["Title"] = "Confirmação de Exclusão do Usuario";
}

<div class="text-center">
    <h3>Deseja realmente apagar as informações do usuario @Model.Usuario</h3>
</div>

<a class="btn btn-primary w-100 mt-3" role="button" asp-controller="Anime" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger w-100 mt-3" role="button" asp-controller="Anime" asp-route-id="@Model.Id" asp-action="ConfirmarExclusao">Confirmar Exclusão</a>
